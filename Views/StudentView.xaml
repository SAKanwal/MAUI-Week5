<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week3_L1.Views.StudentView"
             Title="StudentView">
    <VerticalStackLayout>
        <SearchBar
    Placeholder="Search students"
    Text="{Binding SearchText}" />

        <CollectionView
    x:Name="StudentsCollection"
    ItemsSource="{Binding Students}"
    SelectionMode="Single"
            SelectedItem="{Binding SelectedStudent}"
            SelectionChangedCommand="{Binding StudentSelectedCommand}"
     SelectionChangedCommandParameter="{Binding SelectedItem ,Source={RelativeSource Self}}" >

            <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
              Stroke="Blue"
              StrokeThickness="1"
              StrokeShape="RoundRectangle 8"
              Margin="8"
              Padding="10">
                        <HorizontalStackLayout Spacing="30">
                            <Label
                        VerticalOptions="Center"
                        Text="{Binding StudentName}" />

                            <Button
                        Text="Edit"
                        Command="{Binding BindingContext.EditStudentCommand,
                                          Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                        CommandParameter="{Binding .}" />

                        </HorizontalStackLayout>
                    </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
        <Button Padding="20" Margin="10" Text="Add another Student"  Command="{Binding AddStudentCommand}" />
    </VerticalStackLayout>
</ContentPage>