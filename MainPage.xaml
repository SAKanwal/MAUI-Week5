<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week3_L1.MainPage">
    <CollectionView ItemsSource="{Binding Students}" ItemsLayout="HorizontalList">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
                Stroke="DodgerBlue"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8"
                Margin="8"
                Padding="10">
                    <Label Padding="10" Text="{Binding studentName}" />
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
